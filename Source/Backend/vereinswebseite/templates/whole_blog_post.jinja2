    <title>Profil</title>

</head>
<body>
    <div id="whole_post_page">
               
        <div class="container" id="post">
            <div id="post_head">

                <h1 id="title">{{title}}</h1>
                <h4 id="author">{{author}}</h4>
                <p id="date">{{date}}</p>


                <div id="content">
                    <p id="post_text">{{post}}</p>

                </div>

                <h2 id="picture_title">Bilder</h2>
                <div class="wrapped" id="all_pictures">
                    <div id='all_pictures'>
                            <img src="bild1" width="120" height="96" alt="" style="margin:5px" float="left">
                            <img src="bild2" width="120" height="96" alt="" style="margin:5px" float="left">
                            <img src="bild3" width="120" height="96" alt="" style="margin:5px" float="left">
                            <img src="bild4" width="120" height="96" alt="" style="margin:5px" float="left">
                            <img src="bild4" width="120" height="96" alt="" style="margin:5px" float="left">
                            <img src="bild4" width="120" height="96" alt="" style="margin:5px" float="left">
                    </div>

                </div>

                    
                <div class="d-md-flex flex-md-row justify-content-md mt-1">
                    <button type="button" class="btn btn-secondary" id="button_edit_post" onclick="post_edit();">Beitrag Bearbeiten</button>
                </div>

            </div> 
        </div>

        {%if cancreatenew == False%}
            <div class="container" id="new_post">
                <button type="button" class="btn btn-primary" id="button_new_post" onclick="new_post();">Neuen Beitrag erstellen</button>

            </div>
        {% endif %}


        <div class="container" id="comments" style="display:none;">

            <h1 id="comment_title">Kommentare</h1>

            <div id="exist_comment">

                <p id="comment_owner">Max Mustermann</p>

                <div id="exist_comment_text">
                    <p id="post_text">Hahahaha lol</p>

                </div>
            </div>


            <div id="new_comment_div">
                <label for="comment_description" class="form-label">neuer Kommentar erstellen</label>
                <textarea class="form-control form-control-md" id="comment_description" rows="3" readonly
                aria-describedby="comment_description" placeholder="Kommentar hinzufÃ¼gen" ></textarea>
                <div class="d-md-flex flex-md-row justify-content-md mt-1">
                    <button type="button" class="btn btn-secondary" id="comment_description_edit" onclick="comment_edit();">Neuer Kommentar erstellen</button>
                    <button type="button" class="btn btn-secondary" id="comment_description_save" disabled onclick="comment_save();">Neuer Kommentar Speichern</button>
                </div>
            </div>
        </div>

    </div>
<script>var exports = {};</script>
